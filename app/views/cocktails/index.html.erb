<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://drinkedin.net/images/easyblog_images/62/b2ap3_large_cocktails-with-funny-drink-names-you-must-try_3_20140113-141311_1.jpg');">
  <div class="banner-content">
  <h2><%= link_to "create a new cocktail", new_cocktail_path, class: 'btn btn-primary' %></h2>
  </div>
</div>

<div class="container">
<h1>Our cocktails</h1>
<% @cocktails.each do |cocktail| %>
  <div class="row">
    <div class="col-xs-12 col-sm-4">
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fit %>');">
  <div class="card-description">
    <h2><%= @cocktail.name %></h2>
  </div>
  <%= link_to cocktail_path(cocktail) %>
</div>

   </div>
<% end %>
</div>

</div>
