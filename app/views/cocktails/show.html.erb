<div class="container">
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fit %>
<% @cocktail.doses.each do |i| %>
<p><%= " #{i.ingredient.name} - #{i.description} " %></p>
<p><%= link_to "delete", dose_path(i) , method: :delete %></p>
<% end %>
<h2> add a new dose </h2>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.input :ingredient_id, collection: Ingredient.all %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to 'Back', cocktails_path %>
</div>
